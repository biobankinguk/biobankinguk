@model Biobanks.Directory.Areas.Biobank.Models.Collections.AddCollectionModel
@{
    ViewBag.Title = "Add collection";
}

@section FooterScripts
{
    <script src="~/dist/js/Biobank/diagnosis-type-ahead.js" asp-append-version="true"></script>
    <script src="~/dist/js/Biobank/collection-crud.min.js" asp-append-version="true"></script>
    <script src="~/dist/js/Biobank/help-buttons.min.js" asp-append-version="true"></script>
    <script src="~/dist/js/Biobank/associated-data-provision.min.js" asp-append-version="true"></script>
}


<h2>@ViewBag.Title</h2>

<partial name ="_DataProtectionAlert"/>

@using (Html.BeginForm("AddCollection", "Collections", FormMethod.Post, new { @class = "form-horizontal col-sm-10" }))
{
    @Html.AntiForgeryToken()

  @await Html.PartialAsync("_CollectionSharedFields", Model)

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10 text-center">
          @Html.ActionLink("Cancel", "Index", "Collections", new { biobankId = ViewContext.RouteData.Values["biobankId"] }, new { @class = "btn btn-default" })
          <button type="submit" class="btn btn-primary">Create collection</button>
        </div>
    </div>
}
