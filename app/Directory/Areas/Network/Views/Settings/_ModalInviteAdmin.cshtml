@model Biobanks.Submissions.Api.Models.Shared.InviteRegisterEntityAdminModel;

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="modalInviteNetworkAdmin_Label">Add new @Model.EntityName admin</h4>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="alert alert-info">
                    <p>Send an invite to a new user to become an admin of your @Model.EntityName</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12" data-bind="visible: dialogErrors().length > 0">
                <div class="alert alert-danger"
                     data-valmsg-summary="true"
                     data-bind="foreach: dialogErrors">
                    <p>
                        <span class="fa fa-exclamation-triangle"></span>
                        <span data-bind="text: $data"></span>
                    </p>
                </div>
            </div>
        </div>

        <form id="modalInviteNetworkAdminForm"
              data-action="@Url.Action("InviteAdminAjax", "Settings", new { Area = "Network", networkId = ViewContext.RouteData.Values["networkId"]})"
              data-success-redirect="@Url.Action("InviteAdminSuccess", "Settings", new { Area = "Network", networkId = ViewContext.RouteData.Values["networkId"] })"
              class="form-horizontal"
              method="post">
            
            <div class="modal-body">
                @Html.EditorForModel(new { modal = true })
            </div>

            <div class="modal-footer">
                <a class="btn btn-default" href="#" data-dismiss="modal">Cancel</a>
                <button type="submit" class="btn btn-primary">Send invite</button>
            </div>
        </form>
    </div>
</div>
