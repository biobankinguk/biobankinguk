@using Biobanks.Directory.Config
@model Biobanks.Directory.Models.Emails.RegisterEntityDeclinedModel
@inject IHostEnvironment HostEnvironment
@inject IOptions<SitePropertiesOptions> _config

@{
    var directoryName = @_config.Value.ServiceName;
    var emailSignature = @_config.Value.EmailSignature;

    // Format Email Subject
    ViewBag.Subject = $"{directoryName} {ViewBag.Entity} Registration";
}

Dear @Html.Raw(Model!.name)

Thanks for your interest in the @directoryName.

We have received your registration for @Html.Raw(Model.entity) but are unfortunately unable to accept it at this time.

Regards,
@emailSignature
