@using Biobanks.Directory.Config
@model Biobanks.Directory.Models.Emails.DirectoryAdminNewRegisterRequestNotificationModel
@inject IOptions<SitePropertiesOptions> _siteConfig

@{
    var directoryName = @_siteConfig.Value.ServiceName;
    var emailSignature = @_siteConfig.Value.EmailSignature;

    // Format Email Subject
    ViewBag.Subject = $"{directoryName} {ViewBag.Entity} Registration";
}

Dear Directory Administrators, <br/>
<br/>
A @directoryName Registration Request has been received!
<br/><br/>
The Request is for a @Model.EntityType called @Model.EntityName requested by @Model.RequesterName (@Model.RequesterEmail).
<br/><br/>
Regards,<br/>

@emailSignature
<br/><br/>

If you would like to unsubscribe from receiving these notifications, please contact the admins on this email to request removal. 
