@model Biobanks.Directory.Models.Account.ForgotPasswordModel

@{
    ViewBag.Title = "Forgot password";
}

<h2>Forgot Password</h2>

<div class="row">
    <div class="col-sm-12">
        <p>Enter email to send a reset password link via email</p>
    </div>
</div>

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        @using (Html.BeginForm(
            "ForgotPassword", "Account",
            FormMethod.Post,
            new {@class = "form-horizontal"}))
        {
            <div class="form-group">
                @Html.LabelFor(x => x.Email, new {@class = "col-sm-3 control-label required"})
                <div class="col-sm-9">
                    @Html.TextBoxFor(x => x.Email, new {@class = "form-control", @type="email"})
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-4">
                    <button type="submit" class="btn btn-primary form-control">Send</button>
                </div>
            </div>

        }
    </div>
</div>
