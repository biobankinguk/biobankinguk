@model Biobanks.Directory.Models.Account.AccountDetailsModel

@Html.HiddenFor(x => x.UserId)

<div class="form-group">
    @Html.LabelFor(x => x.Name, new {@class = "col-sm-2 control-label required"})
    <div class="col-sm-4">
        @Html.TextBoxFor(x => x.Name, new {@class = "form-control", placeholder = "Name"})
        @Html.ValidationMessageFor(x => x.Name)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(x => x.Email, new {@class = "col-sm-2 control-label"})
    <div class="col-sm-4">
        <p class="form-control-static">@Html.DisplayFor(x => x.Email)</p>
    </div>
</div>
