@using System.Web.Optimization
@model Biobanks.Web.Models.Biobank.EditCapabilityModel
@{
    ViewBag.Title = "Edit capability";
}

@section FooterScripts
{
    @Scripts.Render("~/bundles/bootbox") @* TODO: Remove - included by layout *@
    @Scripts.Render("~/bundles/collection-and-capability-crud")
    @Scripts.Render("~/bundles/help-buttons")
    
     @* TODO: Core bundles
    <script src="~/dist/js/Biobank/collection-and-capability-crud.min.js" asp-append-version="true"></script>
    <script src="~/dist/js/Biobank/help-buttons.min.js" asp-append-version="true"></script>
    *@
}

<h2 style="margin-top: 0;">@ViewBag.Title</h2>
<br />

@using (Html.BeginForm("EditCapability", "Biobank", FormMethod.Post, new { @class = "form-horizontal col-sm-10" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)

    @Html.Partial("_CapabilitySharedFields", Model)

    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2 text-center">
            @Html.ActionLink("Cancel", "Capability", new { id = Model.Id }, new { @class = "btn btn-default" })
            <button type="submit" class="btn btn-primary">Update capability</button>
        </div>
    </div>
}
