@using System.Linq
@using System.Web.Optimization
@model Biobanks.Web.Models.Biobank.BiobankCapabilitiesModel
@{
    ViewBag.Title = "Capabilities";
}

@section FooterScripts
{
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/biobank/capabilities")
}

@Html.Partial("_BiobankTabs", "Capabilities")

<h3>
    @ViewBag.Title
    @Html.ActionLink("Add capability", "AddCapability", null, new {@class = "btn btn-success pull-right"})
</h3>

<div class="row">
    <div class="col-md-12">
        <br/>
        @if (Model.BiobankCapabilityModels.Any())
        {
            <table id="biobank-capabilities" class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Disease status</th>
                    <th>Protocol</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var capability in Model.BiobankCapabilityModels)
                {
                    <tr class="capability-link clickable-row"
                        data-href="@Url.Action("Capability", new {@capability.Id})">
                        <td>@capability.SnomedTerm</td>
                        <td>@capability.Protocol</td>
                    </tr>
                }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info">
                There are no capabilities here yet.
                @Html.ActionLink("Add a capability now", "AddCapability")
            </div>
        }
    </div>
</div>
