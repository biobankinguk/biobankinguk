@model MvcSiteMapProvider.Web.Html.Models.SiteMapPathHelperModel
@using System.Web.Mvc.Html
@using System.Linq

<ol class="breadcrumb">
    @foreach (var node in Model)
    {
        @Html.DisplayFor(m => node);

        if (node != Model.Last())
        {
            <li>&gt;</li>
        }
    }
</ol>