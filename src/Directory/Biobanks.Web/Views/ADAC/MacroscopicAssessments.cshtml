@using Directory.Data.Constants;
@using System.Web.Optimization
@model Biobanks.Web.Models.ADAC.MacroscopicAssessmentsModel

@{
	ViewBag.Title = App.Config[ConfigKey.MacroscopicAssessmentName];
}

@Html.Partial("_ADACTabs", (string)ViewBag.Title)

<h3>
	<div id="titleName" class="pull-left">
		@App.Config[ConfigKey.MacroscopicAssessmentName]
		<a href="#" class="btn btn-primary" id="macroscopicAssessmentTitle">
			Override Name
		</a>
		<span class="fa fa-info-circle help-icon-button help-icon-for-label help-label-adac-macroscopicassessment-override"></span>
	</div>
	<a href="#"
	   class="btn btn-success pull-right"
	   data-target="#macro-assessments-modal"
	   data-bind="click: openModalForAdd">Add @App.Config[ConfigKey.MacroscopicAssessmentName]</a>
</h3>
<form id="change-macroscopic-assessment-name-form" hidden>
	<input type="text" id="MacroscopicAssessmentRefValue" name="MacroscopicAssessmentRefValue" value="@App.Config[ConfigKey.MacroscopicAssessmentName]" hidden>
	<input type="text" id="MacroscopicAssessmentName" name="MacroscopicAssessmentName" value="@App.Config[ConfigKey.MacroscopicAssessmentName]">
	<input type="submit" class="btn btn-primary" value="Submit">
	<input type="button" class="btn btn-primary" id="macroscopicAssessmentTitleCancel" value="Cancel">
</form>

<div class="row">
	<div class="col-sm-12">
		<br />
		<table id="macro-assessments" class="table table-striped table-fixed">

			<thead>
				<tr>
					<th>Sort Order</th>
					<th>@App.Config[ConfigKey.MacroscopicAssessmentName]</th>
					<th>Sample Set Count</th>
					<th>@* Actions *@</th>
				</tr>
			</thead>

			<tbody>
				@foreach (var type in Model.MacroscopicAssessments)
				{
					<tr class="@(type.SampleSetsCount > 0 ? "info" : "")"
						data-resource-url="/api/MacroscopicAssessments"
						data-macro-assessment-id="@type.Id"
						data-macro-assessment-desc="@type.Description">

						<td>@type.SortOrder</td>
						<td>@type.Description</td>
						<td>@type.SampleSetsCount</td>
						<td class="text-right">
							@if (type.SampleSetsCount > 0)
							{
								<span class="fa fa-info-circle labelled-icon"></span>@Html.Raw($"{App.Config[ConfigKey.MacroscopicAssessmentName]} in use")
							}
							else if (Model.MacroscopicAssessments.Count > 1)
							{
								<a title="Edit"
								   class="action-icon"
								   href="#"
								   data-target="#macro-assessments-modal"
								   data-macro-assessment="@Json.Encode(type)"
								   data-bind="click: openModalForEdit">
									<span class="fa fa-edit labelled-icon"></span>Edit
								</a>

								<a title="Delete"
								   class="action-icon delete-confirm"
								   data-macro-assessment="@type.Description"
								   href="@Url.Action("DeleteMacroscopicAssessment", new
								{
									type.Id,
									type.Description,
									type.SortOrder
								})">
									<span class="fa fa-trash labelled-icon"></span>Delete
								</a>
							}
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

<!-- Modal -->
<div class="modal fade" id="macro-assessments-modal" tabindex="-1" role="dialog" aria-labelledby="macro-assessments-label">
	<div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="macro-assessments-modal-label"><span data-bind="text: modal.mode"></span> @App.Config[ConfigKey.MacroscopicAssessmentName]</h4>
            </div>

            @*Error List*@
            <div class="row">
                <div class="col-sm-12" data-bind="visible: dialogErrors().length > 0">
                    <div class="alert alert-danger"
                         data-valmsg-summary="true"
                         data-bind="foreach: dialogErrors">
                        <p>
                            <span class="fa fa-exclamation-triangle"></span>
                            <span data-bind="text: $data"></span>
                        </p>
                    </div>
                </div>
            </div>
            
            @*Modal Form*@
        <form id="modal-macro-assessments-form"
              data-resource-url="/api/MacroscopicAssessments"
              data-update-success-redirect="@Url.Action("EditMacroscopicAssessmentSuccess")"
              data-add-success-redirect="@Url.Action("AddMacroscopicAssessmentSuccess")"
              class="form-horizontal">
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <input type="hidden" id="Id" name="Id" data-bind="value: modal.macroAssessment().id">
                        <input type="hidden" id="SortOrder" name="SortOrder" data-bind="value: modal.macroAssessment().sortOrder">

                        @*Macroscopeic Assessment*@
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Description</label>
                            <div class="col-sm-9">
                                <input type="text" id="Description" name="Description" class="form-control" data-bind="value: modal.macroAssessment().description()">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary" data-bind="text: modal.mode"></button>
            </div>
        </form>
        </div>
	</div>
</div>

@section FooterScripts
{
	@Scripts.Render("~/bundles/knockout")
	@Scripts.Render("~/bundles/datatables")
	@Scripts.Render("~/bundles/adac/macro-assessments")
	@Scripts.Render("~/bundles/help-buttons")
}