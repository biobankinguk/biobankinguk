@using System.Web.Optimization
@using Biobanks.Web.Models.Home
@model HomepageContentModel
@{
    ViewBag.Title = "Homepage Config";
}

@Html.Partial("_ADACTabs", (string)ViewBag.Title)



<h3>
    Homepage Configuration
</h3>

<ul id="searchtabs" class="nav nav-tabs" role="tablist">
    <li class="active">
        <a href="#_HomepageConfig" role="tab" data-toggle="tab">Homepage</a>
    </li>
    <li>
        <a href="#_CollectionsCapabilitiesSearchConfig" role="tab" data-toggle="tab">Collections & Capabilities Search</a>
    </li>
    <li>
        <a href="#_PublicationSearchConfig" role="tab" data-toggle="tab">Publications Search</a>
    </li>
</ul>


<!-- Uses JS to call relevant method in ADACController -->
<div class="tab-content">

    <!-- Homepage config tab-->
    <div class="tab-pane fade in active" id="_HomepageConfig">
        @Html.Partial("~/Views/ADAC/_HomepageConfig.cshtml", Model)
    </div>

    <!-- Collections & Capabilities Search Config-->
    <div class="tab-pane fade" id="_CollectionsCapabilitiesSearchConfig">

    </div>

    <!-- Publications Search Config-->
    <div class="tab-pane fade" id="_PublicationSearchConfig">

    </div>

</div>

<style>
    .savePreviewBtns {
        padding-top: 20px;
    }
</style>

@section FooterScripts
{
    @Scripts.Render("~/bundles/markdowndeep")
    @Scripts.Render("~/bundles/adac/homepage-config")
}

