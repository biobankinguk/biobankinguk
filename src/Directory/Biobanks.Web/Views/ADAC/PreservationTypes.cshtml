@using Directory.Data.Constants;
@using System.Web.Optimization
@model Biobanks.Web.Models.ADAC.PreservationTypesModel

@{
	ViewBag.Title = App.Config[ConfigKey.PreservationTypeName];
}

@Html.Partial("_ADACTabs", (string)ViewBag.Title)


<h3>
	<div id="titleName" class="pull-left">
		@App.Config[ConfigKey.PreservationTypeName]
		<a href="#" class="btn btn-primary" id="preservationTypeTitle">
			Override Name
		</a>
		<span class="fa fa-info-circle help-icon-button help-icon-for-label help-label-adac-preservationtype-override"></span>
	</div>
	<a href="#"
	   class="btn btn-success pull-right"
	   data-target="#preservation-types-modal"
	   data-bind="click: openModalForAdd">Add @App.Config[ConfigKey.PreservationTypeName]</a>
</h3>
<form id="change-preservation-type-name-form" hidden>
	<input type="text" id="PreservationTypeRefValue" name="PreservationTypeRefValue" value="@App.Config[ConfigKey.PreservationTypeName]" hidden>
	<input type="text" id="PreservationTypeName" name="PreservationTypeName" value="@App.Config[ConfigKey.PreservationTypeName]">
	<input type="submit" class="btn btn-primary" value="Submit">
	<input type="button" class="btn btn-primary" id="preservationTypeTitleCancel" value="Cancel">
</form>


<div class="row">
	<div class="col-sm-12">
		<br />
		<table id="preservation-types" class="table table-striped table-fixed">

			<thead>
				<tr>
					<th>Sort Order</th>
					<th>@App.Config[ConfigKey.PreservationTypeName]</th>
					<th>Sample Set Count</th>
					<th>@* Actions *@</th>
				</tr>
			</thead>

			<tbody>
				@foreach (var type in Model.PreservationTypes)
				{
					<tr class="@(type.SampleSetsCount > 0 ? "info" : "")"
						data-preservation-id="@type.Id"
						data-preservation-desc="@type.Description">

						<td>@type.SortOrder</td>
						<td>@type.Description</td>
						<td>@type.SampleSetsCount</td>
						<td class="text-right">
							@if (type.SampleSetsCount > 0)
							{
								<span class="fa fa-info-circle labelled-icon"></span>@Html.Raw($"{App.Config[ConfigKey.PreservationTypeName]} in use ")
							}
							else
							{
								<a title="Edit"
								   class="action-icon"
								   href="#"
								   data-target="#preservation-types-modal"
								   data-preservation-type="@Json.Encode(type)"
								   data-bind="click: openModalForEdit">
									<span class="fa fa-edit labelled-icon"></span>Edit
								</a>

								<a title="Delete"
								   class="action-icon delete-confirm"
								   data-preservation-type="@type.Description"
								   href="@Url.Action("DeletePreservationType", new
								{
									type.Id,
									type.Description,
									type.SortOrder
								})">
									<span class="fa fa-trash labelled-icon"></span>Delete
								</a>
							}
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

<!-- Modal -->
<div class="modal fade" id="preservation-types-modal" tabindex="-1" role="dialog" aria-labelledby="preservation-types-label">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title" id="preservation-types-modal-label"><span data-bind="text: modal.mode"></span> @App.Config[ConfigKey.PreservationTypeName]</h4>
			</div>

			<!-- Error List -->
			<div class="row">
				<div class="col-sm-12" data-bind="visible: dialogErrors().length > 0">
					<div class="alert alert-danger"
						 data-valmsg-summary="true"
						 data-bind="foreach: dialogErrors">
						<p>
							<span class="fa fa-exclamation-triangle"></span>
							<span data-bind="text: $data"></span>
						</p>
					</div>
				</div>
			</div>

			<!-- Modal Form -->
			<form id="modal-preservation-types-form" class="form-horizontal">
				<div class="modal-body">
					<div class="row">
						<div class="col-sm-12">
							<input type="hidden" id="Id" name="Id" data-bind="value: modal.preservationType().id">
							<input type="hidden" id="SortOrder" name="SortOrder" data-bind="value: modal.preservationType().sortOrder">

							<!-- Preservation Type -->
							<div class="form-group">
								<label class="col-sm-3 control-label">Description</label>
								<div class="col-sm-9">
									<input type="text" id="Description" name="Description" class="form-control" data-bind="value: modal.preservationType().description()">
								</div>
							</div>
						</div>
					</div>
				</div>

				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
					<button type="submit" class="btn btn-primary" data-bind="text: modal.mode"></button>
				</div>
			</form>
		</div>
	</div>
</div>

@section FooterScripts
{
	@Scripts.Render("~/bundles/knockout")
	@Scripts.Render("~/bundles/datatables")
	@Scripts.Render("~/bundles/adac/preservation-types")
	@Scripts.Render("~/bundles/help-buttons")
}