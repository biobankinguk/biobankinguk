@using System.Web.Optimization
@model Biobanks.Web.Models.ADAC.BiobankModel
@{
    ViewBag.Title = "Biobank Admin";
}

@Html.Partial("_ADACTabs", "Biobanks")

<h3>@Model.Name - Admin @Html.ActionLink("Delete", "DeleteBiobank", "ADAC", new { id = @Model.BiobankId }, new { @class = "btn btn-danger pull-right" })</h3>

<h2>Details</h2>

<div class="row">
    <div class="col-md-12">
        <br />


        <div class="col-sm-12">
            <dl class="dl-horizontal dt-left">
                <!-- Biobank Email -->
                <dt>Email: </dt>
                <dd itemprop="email"><a href="mailto:@Model.ContactEmail">@Model.ContactEmail</a></dd>

                <!-- Biobank Status - Suspended or Active -->
                <dt>Status: </dt>
                <dd>
                    @(Model.IsSuspended ? Html.Raw("Suspended") : Html.Raw("Active"))
                    @if (Model.IsSuspended)
                    {
                        <a href="@Url.Action(
                                             "UnsuspendBiobank", "ADAC",
                                             new
                                             {
                                                 id = Model.BiobankId
                                             })"
                           class="unsuspend-confirm pull-right"
                           data-biobank-name="@Model.Name">
                            <span class="fa fa-check-square-o labelled-icon"></span>Unsuspend
                        </a>
                    }
                    else
                    {
                        <a href="@Url.Action(
                                             "SuspendBiobank", "ADAC",
                                             new
                                             {
                                                 id = Model.BiobankId
                                             })"
                           class="suspend-confirm pull-right"
                           data-biobank-name="@Model.Name">
                            <span class="fa fa-ban labelled-icon"></span>Suspend
                        </a>
                    }
                </dd>
            </dl>

        </div>
    </div>
</div>

<h2>Administrators <a href="#" class="btn btn-success pull-right" data-toggle="modal" data-target="#modalInviteBiobankAdmin" data-bind="click: openInviteDialog">Add new admin</a></h2>
<div class="row">
    <div class="col-sm-12">
        <br />
        <table id="biobank-admins" class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Contact Email</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var admin in Model.Admins)
                {
                <tr>
                    <td class="vtop">
                        @admin.UserFullName
                    </td>
                    <td class="vtop">
                        <a href="mailto:@admin.UserEmail">@admin.UserEmail</a>
                    </td>
                    <td>
                        <div class="pull-right">

                            @if (!admin.EmailConfirmed)
                            {
                                <a href="@Url.Action(
                                        "ResendConfirmLink", "Account",
                                        new
                                        {
                                            userEmail = admin.UserEmail,
                                            onBehalf = true,
                                            returnUrl = Request.RawUrl
                                        })"
                                   class="confirm-resend"
                                   data-admin-name="@admin.UserFullName">
                                    <span class="fa fa-repeat labelled-icon"></span>Resend Invite
                                </a>
                            }
                            &nbsp;
                            <a href="@Url.Action("DeleteAdmin", "ADAC", new {biobankId = Model.BiobankId, biobankUserId = admin.UserId})"
                               class="confirm-admin-delete"
                               data-admin-name="@admin.UserFullName"
                               data-biobank-name="@Model.Name">
                                <span class="fa fa-trash labelled-icon"></span>Delete
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>

        </table>


    </div>
</div>

@section FooterScripts
{
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/adac/biobanks")
}
