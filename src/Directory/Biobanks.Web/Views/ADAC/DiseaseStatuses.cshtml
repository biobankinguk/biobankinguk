@using System.Web.Optimization
@model Biobanks.Web.Models.ADAC.DiagnosesModel

@{
    ViewBag.Title = "Disease statuses";
}

@Html.Partial("_ADACTabs", (string) ViewBag.Title)

<h3>Disease statuses
    <a href="#"
       class="btn btn-success pull-right"
       data-target="#disease-status-modal"
       data-bind="click: openModalForAdd">Add disease status</a>
</h3>

<div class="row">
    <div class="col-sm-12">
        <br/>
        <table id="disease-statuses" class="table table-striped table-fixed">

            <thead>
                <tr>
                    <th>Name</th>
                    <th>SNOMED ID</th>
                    <th>Other Terms</th>
                    <th>Collection and Capability Count</th>
                    <th>@* Actions *@</th>
                </tr>
            </thead>

            <tbody>
            @foreach (var diagnosis in Model.Diagnoses)
            {
                <tr class="@(diagnosis.CollectionCapabilityCount > 0 ? "info" : "")">
                    <td>
                        <div class="wrappable-td">@Html.DisplayFor(x => diagnosis.Description)</div>
                    </td>
                    <td>
                        @Html.DisplayFor(x => diagnosis.SnomedIdentifier)
                    </td>
                    <td><div class="wrappable-td">@Html.DisplayFor(x => diagnosis.OtherTerms)</div></td>
                    <td>@diagnosis.CollectionCapabilityCount</td>

                    <td class="text-right">
                        @if (diagnosis.CollectionCapabilityCount > 0)
                        {
                            <span class="fa fa-info-circle labelled-icon"></span>@Html.Raw("Disease status in use")
                        }
                        else
                        {
                            <a title="Edit"
                               class="action-icon"
                               href="#"
                               data-target="#disease-status-modal"
                               data-disease-status="@Json.Encode(diagnosis)"
                               data-bind="click: openModalForEdit">
                                <span class="fa fa-edit labelled-icon"></span>Edit
                            </a>

                            <a title="Delete"
                               class="action-icon delete-confirm"
                               data-disease-status="&quot;@diagnosis.Description&quot;"
                               href="@Url.Action("DeleteDiseaseStatus", new
                                     {
                                         diagnosis.Id, diagnosis.Description
                                     })">
                                <span class="fa fa-trash labelled-icon"></span>Delete
                            </a>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="disease-status-modal" tabindex="-1" role="dialog" aria-labelledby="disease-status-modal-label">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="disease-status-modal-label"><span data-bind="text: modal.mode"></span> disease status</h4>
            </div>

            <div class="row">
                <div class="col-sm-12" data-bind="visible: dialogErrors().length > 0">
                    <div class="alert alert-danger"
                         data-valmsg-summary="true"
                         data-bind="foreach: dialogErrors">
                        <p>
                            <span class="fa fa-exclamation-triangle"></span>
                            <span data-bind="text: $data"></span>
                        </p>
                    </div>
                </div>
            </div>

            <form id="modal-disease-status-form"
                  data-update-action="@Url.Action("EditDiseaseStatusAjax")"
                  data-update-success-redirect="@Url.Action("EditDiseaseStatusSuccess")"
                  data-add-action="@Url.Action("AddDiseaseStatusAjax")"
                  data-add-success-redirect="@Url.Action("AddDiseaseStatusSuccess")"
                  class="form-horizontal">

                <div class="modal-body">

                    <div class="row">
                        <div class="col-sm-12">
                            <input type="hidden" id="Id" name="Id" data-bind="value: modal.diseaseStatus().id">

                            <!-- SNOMED ID -->
                            <div class="form-group">
                                <label class="col-sm-3 control-label">SNOMED ID</label>
                                <div class="col-sm-9">
                                    <input type="text" id="SnomedIdentifier" name="SnomedIdentifier" class="form-control"
                                           data-bind="value: modal.diseaseStatus().snomedIdentifier()" maxlength="20">
                                </div>
                            </div>

                            <!-- Description -->
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Name</label>
                                <div class="col-sm-9">
                                    <input type="text" id="Description" name="Description" class="form-control"
                                           data-bind="value: modal.diseaseStatus().description()">
                                </div>
                            </div>

                            <!-- Other Terms -->
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Other Terms</label>
                                <div class="col-sm-9">
                                    <input type="text" id="OtherTerms" name="OtherTerms" class="form-control"
                                           data-bind="value: modal.diseaseStatus().otherTerms()">
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" data-bind="text: modal.mode"></button>
                </div>
            </form>
        </div>
    </div>
</div>



@section FooterScripts
{
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/adac/disease-statuses")
}