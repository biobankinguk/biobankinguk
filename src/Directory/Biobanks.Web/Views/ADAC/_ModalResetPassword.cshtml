
@model Biobanks.Web.Models.ADAC.ResetPasswordEntityModel

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Generate Reset Password link</h4>
        </div>

        <div class="modal-body">
            <p>Please do not distribute this link to anyone other than @Model.UserName!</p>
            <p>Reset Password link: <a href="#" onclick="copyToClipboard('@Model.ResetLink')">Copy to Clipboard</a>&nbsp;&nbsp;&nbsp;<a data-toggle="collapse" href="#reset-link" aria-expanded="false" aria-controls="reset-link">Display full link</a></p>
            <div class="collapse" id="reset-link">
                <input id="link" class="col-lg-10" value="@Model.ResetLink" />
            </div>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        </div>

        <div id="copied-toast">Copied</div>

    </div>
    
</div> 




