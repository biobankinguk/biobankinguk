@using System.Web.Optimization
@using Biobanks.Directory.Data.Constants
@model IEnumerable<Biobanks.Web.Models.Shared.SiteConfigModel>

@{ ViewBag.Title = "Flags Config"; }


<h3>
    Flags Configuration
    <label id="submit-button" for="submit-form" class="btn btn-success pull-right">Save Changes</label>
</h3>

<div class="row">
    <div class="col-sm-12">
        <br />

        <form id="flags-config-form">
            <h3>Feature Flags</h3>
            <table id="flags-config" class="table table-striped table-fixed">
                <thead>
                    <tr>
                        <th>Feature</th>
                        <th>Description</th>
                        <th>On/Off</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var config in Model.Where(x => !x.ReadOnly).Where(x => x.IsFeatureFlag == true))
                    {
        <tr>
            <td>@config.Name</td>
            <td>@config.Description</td>
            <td>
                @switch (config.Key)
                {
                    // Checkbox boolean
                    case ConfigKey.TrustBiobanks:
                    case ConfigKey.EnableDataSharing:
                    case ConfigKey.ShowCounties:
                    case ConfigKey.ShowPreservationPercentage:
                    case ConfigKey.DisplayLiveChat:
                    case ConfigKey.FundersFreeText:
                    case ConfigKey.DisplayAnalytics:
                    case ConfigKey.DisplayPublications:
                    case ConfigKey.ContactThirdParty:
                    case ConfigKey.DisplaySubmissions:


            <input type="checkbox" name="@config.Key" value="@config.Value" @Html.Raw(config.ReadOnly ? "disabled" : "") /> break;

            default:
            <input type="checkbox" name="@config.Key" value="@config.Value" @Html.Raw(config.ReadOnly ? "disabled" : "") />break;
    }
            </td>
        </tr>}
                </tbody>
            </table>
            <br />
            <h3>Config Flags</h3>
            <br />
            <table id="flags-config" class="table table-striped table-fixed">
                <thead>
                    <tr>
                        <th>Config Option</th>
                        <th>Description</th>
                        <th>On/Off</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var config in Model.Where(x => !x.ReadOnly))
                    {
        <tr>
            <td>@config.Name</td>
            <td>@config.Description</td>
            <td>
                @switch (config.Key)
                {
                    // Checkbox boolean
                    case ConfigKey.TrustBiobanks:
                    case ConfigKey.EnableDataSharing:
                    case ConfigKey.ShowCounties:
                    case ConfigKey.ShowPreservationPercentage:
                    case ConfigKey.DisplayLiveChat:
                    case ConfigKey.FundersFreeText:
                    case ConfigKey.DisplayAnalytics:
                    case ConfigKey.DisplayPublications:
                    case ConfigKey.ContactThirdParty:
                    case ConfigKey.DisplaySubmissions:

                    <input type="checkbox" name="@config.Key" value="@config.Value" @Html.Raw(config.ReadOnly ? "disabled" : "") /> break;

                default:
                    <input type="checkbox" name="@config.Key" value="@config.Value" @Html.Raw(config.ReadOnly ? "disabled" : "") />break;
    }
            </td>
        </tr>}
                </tbody>
            </table>
            <input type="submit" id="submit-form" class="hidden" />
        </form>
    </div>
</div>

@section FooterScripts
{
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/flags/flags-config")
}