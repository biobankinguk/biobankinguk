@page
@model Directory.Pages.Account.LoginModel
@{
    ViewBag.Title = "Login";
}

<h2>@ViewBag.Title</h2>

@if(@Model.Success)
{
    <div class="alert alert-success">Success!</div>
}

<div class="row justify-content-center mt-4">
    <form method="post"
          class="col-6" novalidate>

        <div class="form-group row">
            <label asp-for="Username"
                   class="col-sm-2 col-form-label text-right font-weight-bold px-2">
            </label>
            <div class="col-sm-10">
                <input asp-for="Username" class="form-control" type="email" />
                <span asp-validation-for="Username"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Password"
                   class="col-sm-2 col-form-label text-right font-weight-bold px-2">
            </label>

            <div class="col-sm-10">
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="offset-sm-2 col-sm-4">
                <button type="submit" class="btn btn-primary form-control">Login</button>
            </div>
        </div>

        <div class="form-group row">
                <a class="offset-sm-2 col-sm-4" href="#">Forgot password?</a>
        </div>
    </form>
</div>
