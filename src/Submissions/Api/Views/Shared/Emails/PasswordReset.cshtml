@inject IOptions<SitePropertiesOptions> _config
@inject IHostEnvironment HostEnvironment
@using System.Configuration

@{
    var directoryName = @_config.Value.ServiceName;
	var emailSignature = @_config.Value.EmailSignature;
	var contactAddress = @_config.Value.ContactAddress;

	// Format Email Subject
	ViewBag.Subject = HostEnvironment.IsDevelopment()
		? $"{directoryName} Password Reset"
		: $"{directoryName} Password Reset (Environment: {HostEnvironment.EnvironmentName})";
}

Dear ViewBag.Username,

We have received a password reset request for your account at the @directoryName.

If you didn't request this, please ignore this email.

Otherwise, please use the link below to reset your password:

@Html.Raw(ViewBag.ResetLink)

Regards,
@emailSignature
