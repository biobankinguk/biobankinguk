@using Biobanks.Submissions.Api.Config
@model string
@inject Biobanks.Submissions.Api.Services.Directory.IConfigService _config

<div class="row">
    <div class="col-md-12">
		<ul class="nav nav-tabs">
			<li role="presentation"
				class="@(Model == (string) await _config.GetSiteConfigValue(ConfigKey.SampleResourceName) + " Details" ? "active" : "true")">
				@Html.ActionLink((string) await _config.GetSiteConfigValue(ConfigKey.SampleResourceName) + " Details", "Index")
			</li>
			<li role="presentation"
				class="@(Model == "Admins" ? "active" : "true")">
				@Html.ActionLink("Admins", "Admins")
			</li>

			<li role="presentation"
				class="@(Model == "Funders" ? "active" : "true")">
				@Html.ActionLink("Funders", "Funders")
			</li>

			<li role="presentation"
				class="@(Model == "Collections" ? "active" : "true")">
				@Html.ActionLink("Collections", "Collections")
			</li>

			<li role="presentation"
				class="@(Model == "Capabilities" ? "active" : "true")">
				@Html.ActionLink("Capabilities", "Capabilities")
			</li>

			@if (await _config.GetSiteConfigValue(ConfigKey.TrustBiobanks)!= null)
			{
				<li role="presentation"
					class="@(Model == "Network Acceptance" ? "active" : "true")">
					@Html.ActionLink("Network Acceptance", "NetworkAcceptance")
				</li>

			}

			@if (await _config.GetSiteConfigValue(ConfigKey.DisplayPublications)!= null)
			{
				<li role="presentation"
					class="@(Model == "Publications" ? "active" : "true")">
					@Html.ActionLink("Publications", "Publications")
				</li>
			}

			<li role="presentation"
				class="@(Model == "Annual Stats" ? "active" : "true")">
				@Html.ActionLink("Annual Stats", "AnnualStats")
			</li>
			@if  (await _config.GetSiteConfigValue(ConfigKey.DisplayAnalytics)!= null)
			{
				<li role="presentation"
					class="@(Model == "Analytics" ? "active" : "true")">
					@Html.ActionLink("Analytics", "Analytics")
				</li>
			}
			@if (await _config.GetSiteConfigValue(ConfigKey.DisplaySubmissions)!= null)
			{
				<li role="presentation" class="@(Model == "Submissions" ? "active" : "true")">
					@Html.ActionLink("Bulk Submissions", "Submissions")
				</li>
			}
		</ul>
    </div>
</div>
